<idea-plugin>
    <id>com.potomushto.intunnel</id>
    <name>InTunnel</name>
    <vendor>Local</vendor>
    <description><![CDATA[
        Lightweight tunnel service to expose terminal sessions and build status to mobile clients.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.terminal</depends>
    <depends>com.jetbrains.sh</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Tunnel" anchor="right" factoryClass="com.intellij.tunnel.ui.TunnelToolWindowFactory" />
        <applicationConfigurable
            id="com.potomushto.intunnel.settings"
            displayName="Tunnel"
            instance="com.intellij.tunnel.settings.TunnelSettingsConfigurable" />
        <applicationService serviceImplementation="com.intellij.tunnel.server.TunnelServerService" />
        <applicationService serviceImplementation="com.intellij.tunnel.settings.TunnelTerminalSettingsService" />
        <postStartupActivity implementation="com.intellij.tunnel.startup.TunnelStartupActivity" />
    </extensions>
</idea-plugin>
